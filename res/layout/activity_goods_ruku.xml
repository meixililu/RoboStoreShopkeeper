<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical"
    android:background="@color/white"
    >
	<RelativeLayout
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar"
        android:background="@drawable/top_bg"
        android:orientation="horizontal"
        >
        <FrameLayout 
            android:id="@+id/back_cover"
            android:layout_width="wrap_content"
        	android:layout_height="match_parent"
		    android:layout_gravity="left"
        	android:paddingLeft="@dimen/padding_20"
        	android:paddingRight="@dimen/padding_20"
        	android:foreground="@drawable/framelayout_selector"
            >
			<ImageView 
			    android:layout_width="12dp"
	        	android:layout_height="21dp"
			    android:layout_gravity="center"
			    android:src="@drawable/icon_back"
			    />
        </FrameLayout>
		<TextView 
		    android:id="@+id/title"
		    android:layout_width="match_parent"
        	android:layout_height="match_parent"
		    android:gravity="center"
		    android:textColor="@color/white"
		    android:textSize="@dimen/bigger"
		    />
		
		<TextView
                android:id="@+id/history_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_10"
                android:textColor="@drawable/text_white_to_gray_selector"
                android:textSize="@dimen/middle"
                android:text="历史"
                android:gravity="center"
                android:background="@drawable/bg_menu_btn" />
    </RelativeLayout>
    
	<ScrollView 
	    android:layout_width="match_parent" 
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:fillViewport="true"
	    >
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:padding="@dimen/padding_10"
    	android:orientation="vertical"
        >
        <LinearLayout 
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:gravity="center_vertical"
            >
	        <EditText 
	            android:id="@+id/goods_code_input"
	            android:layout_width="0dp"
	            android:layout_height="40dp"
	            android:layout_weight="1"
	            android:hint="输入商品条码数字"
	            android:textSize="@dimen/big"
	            android:textColorHint="@color/text_grey1"
				android:inputType="number"
				android:imeOptions="actionNext"          
	            android:textCursorDrawable="@null"
	            android:textColor="@color/text_black"
	            android:gravity="left|center_vertical"
				android:background="@drawable/bg_input"
	            />
            <ImageButton 
	            android:id="@+id/scan_btn"
	            android:layout_width="75dp"
	            android:layout_height="40dp"
	            android:layout_marginLeft="@dimen/padding_5"
	            android:gravity="center"
	            android:background="@drawable/btn_scan"
	            />
        </LinearLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            >
	        <EditText 
	            android:id="@+id/goods_info_input"
	            android:layout_width="match_parent"
	            android:layout_height="40dp"
	            android:textColor="@color/text_black"
	            android:textColorHint="@color/text_grey1"
	            android:lines="1"
				android:imeOptions="actionNext" 
	            android:textCursorDrawable="@null"
	            android:hint="此处显示商品信息（自动生成）"
	            android:textSize="@dimen/big"
	            android:gravity="left|center_vertical"
				android:background="@drawable/bg_input"
	            />
            <ImageView 
                android:id="@+id/refresh_goods_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_5"
                android:src="@drawable/ic_cached_grey600_36dp"
                />
        </RelativeLayout>
        
        <EditText 
            android:id="@+id/number_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/text_black"
            android:layout_marginTop="@dimen/padding_10"
            android:textColorHint="@color/text_grey1"
            android:inputType="number"
			android:imeOptions="actionDone" 
            android:textCursorDrawable="@null"
            android:hint="输入入库数量"
            android:textSize="@dimen/big"
            android:gravity="left|center_vertical"
			android:background="@drawable/bg_input"
            />
        <EditText 
            android:id="@+id/delivery_number_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/text_black"
            android:layout_marginTop="@dimen/padding_10"
            android:textColorHint="@color/text_grey1"
            android:inputType="number"
            android:singleLine="true"
			android:imeOptions="actionDone" 
            android:textCursorDrawable="@null"
            android:hint="配送单号"
            android:textSize="@dimen/big"
            android:gravity="left|center_vertical"
			android:background="@drawable/bg_input"
            />
        <LinearLayout 
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="@dimen/padding_10"
	    	android:orientation="horizontal"
	    	android:gravity="center_vertical"
            >
	        <EditText 
	            android:id="@+id/service_keyword_input"
	            android:layout_width="0dp"
	            android:layout_height="40dp"
	            android:layout_weight="1"
	            android:hint="输入服务提供商关键字"
	            android:textSize="@dimen/big"
	            android:textColorHint="@color/text_grey1"
	            android:singleLine="true"
				android:imeOptions="actionNext"          
	            android:textCursorDrawable="@null"
	            android:textColor="@color/text_black"
	            android:gravity="left|center_vertical"
				android:background="@drawable/bg_input_left"
	            />
            <Button 
	            android:id="@+id/search_btn"
	            android:layout_width="70dp"
	            android:layout_height="40dp"
	            android:text="查找"
	            android:gravity="center"
	            android:textColor="@drawable/text_white_to_gray_selector"
	            android:background="@drawable/btn_bg_search"
	            />
        </LinearLayout>
        <TextView 
            android:id="@+id/error_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_7"
            android:paddingLeft="@dimen/padding_5"
            android:textColor="@color/red"
            android:textSize="@dimen/middle"
            />
        
    </LinearLayout>
    </ScrollView>
    <Button 
           android:id="@+id/submit_btn"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:background="@drawable/btn_login_selector"
           android:layout_marginLeft="@dimen/padding_15"
           android:layout_marginRight="@dimen/padding_15"
           android:layout_marginBottom="@dimen/padding_5"
           android:text="@string/submit"
           android:textSize="@dimen/bigger"
           />
    
</LinearLayout>