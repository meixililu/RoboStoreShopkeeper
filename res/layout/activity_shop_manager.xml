<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar"
        android:background="@drawable/top_bg"
        android:paddingLeft="0dp" >

        <FrameLayout
            android:id="@+id/back_cover"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:foreground="@drawable/framelayout_selector"
            android:paddingLeft="@dimen/padding_20"
            android:paddingRight="@dimen/padding_20" >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_back" />
        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="店铺管理"
            android:textColor="@color/white"
            android:textSize="@dimen/bigger" />
    </RelativeLayout>

    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    
    <ScrollView 
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
            >
            <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/app_color"
		        android:padding="@dimen/padding_7" >
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:text="店铺介绍"
		            android:textColor="@color/white"
		            android:textSize="@dimen/middle" />
		        <ImageView 
		            android:id="@+id/shop_edit_img"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="@dimen/padding_5"
		            android:src="@drawable/icon_shop_des_edit"
		            />
		    </RelativeLayout>
            
            <EditText 
	            android:id="@+id/input_shop_des"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_black"
				android:imeOptions="actionDone" 
	            android:textCursorDrawable="@null"
	            android:layout_margin="@dimen/padding_10"
	            android:textSize="@dimen/bigger"
	            android:gravity="left"
	            android:enabled="false"
				android:background="@drawable/edittext_selector"
	            />
            
            <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/app_color"
		        android:padding="@dimen/padding_7" >
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:text="店铺定位"
		            android:textColor="@color/white"
		            android:textSize="@dimen/middle" />
		        <ImageView 
		            android:id="@+id/shop_location_img"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="@dimen/padding_5"
		            android:src="@drawable/icon_shop_location"
		            />
		        <ImageView 
		            android:id="@+id/shop_address_edit_img"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="@dimen/padding_15"
		            android:layout_toLeftOf="@id/shop_location_img"
		            android:src="@drawable/icon_shop_des_edit"
		            />
		    </RelativeLayout>
		    
            <EditText 
	            android:id="@+id/input_shop_position"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_black"
				android:imeOptions="actionDone" 
	            android:textCursorDrawable="@null"
	            android:layout_margin="@dimen/padding_10"
	            android:textSize="@dimen/bigger"
	            android:gravity="left|center_vertical"
	            android:enabled="false"
				android:background="@drawable/edittext_selector"
	            />
            
           <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/app_color"
		        android:padding="@dimen/padding_7" >
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:text="联系人"
		            android:textColor="@color/white"
		            android:textSize="@dimen/middle" />
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="@dimen/padding_5"
		            android:src="@drawable/icon_shop_des_edit"
		            />
		    </RelativeLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
	            android:layout_margin="@dimen/padding_10"
                android:orientation="vertical"
                >
                <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                >
	                <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="联系人："
			            android:textColor="@color/text_black"
			            android:textSize="@dimen/big" 
			            />
	                <TextView
	                    android:id="@+id/user_name"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="@color/text_black"
			            android:textSize="@dimen/big" 
			            />
	            </LinearLayout>
                
            </LinearLayout>
           
           <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/app_color"
		        android:padding="@dimen/padding_7" >
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:text="其他信息"
		            android:textColor="@color/white"
		            android:textSize="@dimen/middle" />
		    </RelativeLayout>
		    
           
        </LinearLayout>
    </ScrollView>
    
    <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
            android:id="@+id/progressBarCircularIndetermininate"
            android:layout_width="@dimen/progressbar_width"
            android:layout_height="@dimen/progressbar_heigh"
            android:layout_gravity="center"
            android:background="@color/app_color"
            android:visibility="gone" />
        
        <TextView 
            android:id="@+id/empty_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/bigger"
            android:text="暂无数据，轻触屏幕可刷新"
            android:visibility="gone"
            />
    </FrameLayout>
</LinearLayout>
