<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar"
        android:background="@drawable/top_bg"
        android:paddingLeft="0dp" >

        <FrameLayout
            android:id="@+id/back_cover"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:foreground="@drawable/framelayout_selector"
            android:paddingLeft="@dimen/padding_20"
            android:paddingRight="@dimen/padding_20" >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_back" />
        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="入库详情"
            android:textColor="@color/white"
            android:textSize="@dimen/bigger" />
		<TextView
            android:id="@+id/modify_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/padding_10"
            android:background="@drawable/bg_menu_btn"
            android:gravity="center"
            android:text="修改"
            android:textColor="@drawable/text_white_to_gray_selector"
            android:textSize="@dimen/middle" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        >
<ScrollView 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:fillViewport="true"
		    >
        <LinearLayout 
            android:id="@+id/content_layout"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:visibility="gone"
		    >
            <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:weightSum="3"
		        android:orientation="horizontal"
		        >
		        <TextView 
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:paddingTop="@dimen/padding_10"
			        android:paddingBottom="@dimen/padding_10"
		            android:layout_weight="1"
		            android:text="入库时间"
		            android:gravity="center"
		            android:textColor="@color/text_black"
		            android:textSize="@dimen/bigger"
		            />
		        <View
		            android:layout_width="1px"
		            android:layout_height="match_parent"
		            android:background="@color/text_tint"
		            />
		        <TextView 
		            android:id="@+id/ruku_time"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:paddingTop="@dimen/padding_10"
			        android:paddingBottom="@dimen/padding_10"
			        android:paddingLeft="@dimen/padding_10"
		            android:layout_weight="2"
		            android:gravity="left"
		            android:textColor="@color/app_color"
		            android:textSize="@dimen/bigger"
		            />
		    </LinearLayout>
			<View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/text_tint"
	            />
			<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:weightSum="3"
		        android:orientation="horizontal"
		        >
		        <TextView 
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:paddingTop="@dimen/padding_10"
			        android:paddingBottom="@dimen/padding_10"
		            android:layout_weight="1"
		            android:text="商品条码"
		            android:gravity="center"
		            android:textColor="@color/text_black"
		            android:textSize="@dimen/bigger"
		            />
		        <View
		            android:layout_width="1px"
		            android:layout_height="match_parent"
		            android:background="@color/text_tint"
		            />
		        <TextView 
		            android:id="@+id/ruku_goods_code"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:paddingTop="@dimen/padding_10"
			        android:paddingBottom="@dimen/padding_10"
			        android:paddingLeft="@dimen/padding_10"
		            android:layout_weight="2"
		            android:gravity="left"
		            android:textColor="@color/app_color"
		            android:textSize="@dimen/bigger"
		            />
		    </LinearLayout>
			<View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/text_tint"
	            />
			<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:weightSum="3"
		        android:orientation="horizontal"
		        >
		        <TextView 
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:paddingTop="@dimen/padding_10"
			        android:paddingBottom="@dimen/padding_10"
		            android:layout_weight="1"
		            android:text="入库商品"
		            android:gravity="center"
		            android:textColor="@color/text_black"
		            android:textSize="@dimen/bigger"
		            />
		        <View
		            android:layout_width="1px"
		            android:layout_height="match_parent"
		            android:background="@color/text_tint"
		            />
		        <TextView 
		            android:id="@+id/ruku_goods_name"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:paddingTop="@dimen/padding_10"
			        android:paddingBottom="@dimen/padding_10"
			        android:paddingLeft="@dimen/padding_10"
		            android:layout_weight="2"
		            android:gravity="left"
		            android:textColor="@color/app_color"
		            android:textSize="@dimen/bigger"
		            />
		    </LinearLayout>
			<View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/text_tint"
	            />
			<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:weightSum="3"
		        android:orientation="horizontal"
		        >
		        <TextView 
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:paddingTop="@dimen/padding_10"
			        android:paddingBottom="@dimen/padding_10"
		            android:layout_weight="1"
		            android:text="入库数量"
		            android:gravity="center"
		            android:textColor="@color/text_black"
		            android:textSize="@dimen/bigger"
		            />
		        <View
		            android:layout_width="1px"
		            android:layout_height="match_parent"
		            android:background="@color/text_tint"
		            />
		        <TextView 
		            android:id="@+id/ruku_goods_number"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:paddingTop="@dimen/padding_10"
			        android:paddingBottom="@dimen/padding_10"
			        android:paddingLeft="@dimen/padding_10"
		            android:layout_weight="2"
		            android:gravity="left"
		            android:textColor="@color/app_color"
		            android:textSize="@dimen/bigger"
		            />
		    </LinearLayout>
			<View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/text_tint"
	            />
			<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:weightSum="3"
		        android:orientation="horizontal"
		        >
		        <TextView 
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:paddingTop="@dimen/padding_10"
			        android:paddingBottom="@dimen/padding_10"
		            android:layout_weight="1"
		            android:text="配送单号"
		            android:gravity="center"
		            android:textColor="@color/text_black"
		            android:textSize="@dimen/bigger"
		            />
		        <View
		            android:layout_width="1px"
		            android:layout_height="match_parent"
		            android:background="@color/text_tint"
		            />
		        <TextView 
		            android:id="@+id/ruku_goods_sid"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:paddingTop="@dimen/padding_10"
			        android:paddingBottom="@dimen/padding_10"
			        android:paddingLeft="@dimen/padding_10"
		            android:layout_weight="2"
		            android:gravity="left"
		            android:textColor="@color/app_color"
		            android:textSize="@dimen/bigger"
		            />
		    </LinearLayout>
			<View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/text_tint"
	            />
			<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:weightSum="3"
		        android:orientation="horizontal"
		        >
		        <TextView 
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:paddingTop="@dimen/padding_10"
			        android:paddingBottom="@dimen/padding_10"
		            android:layout_weight="1"
		            android:text="服务提供商"
		            android:gravity="center"
		            android:textColor="@color/text_black"
		            android:textSize="@dimen/bigger"
		            />
		        <View
		            android:layout_width="1px"
		            android:layout_height="match_parent"
		            android:background="@color/text_tint"
		            />
		        <TextView 
		            android:id="@+id/ruku_goods_service"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:paddingTop="@dimen/padding_10"
			        android:paddingBottom="@dimen/padding_10"
			        android:paddingLeft="@dimen/padding_10"
		            android:layout_weight="2"
		            android:gravity="left"
		            android:textColor="@color/app_color"
		            android:textSize="@dimen/bigger"
		            />
		    </LinearLayout>
			<View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/text_tint"
	            />
			<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:weightSum="3"
		        android:orientation="horizontal"
		        >
		        <TextView 
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:paddingTop="@dimen/padding_10"
			        android:paddingBottom="@dimen/padding_10"
		            android:layout_weight="1"
		            android:text="商品信息"
		            android:gravity="center"
		            android:textColor="@color/text_black"
		            android:textSize="@dimen/bigger"
		            />
		        <View
		            android:layout_width="1px"
		            android:layout_height="match_parent"
		            android:background="@color/text_tint"
		            />
		        <TextView 
		            android:id="@+id/ruku_goods_info"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:paddingTop="@dimen/padding_10"
			        android:paddingBottom="@dimen/padding_10"
			        android:paddingLeft="@dimen/padding_10"
		            android:layout_weight="2"
		            android:gravity="left"
		            android:textColor="@color/app_color"
		            android:textSize="@dimen/bigger"
		            />
		    </LinearLayout>
			<View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/text_tint"
	            />
		</LinearLayout>
		
        </ScrollView>

        <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
            android:id="@+id/progressBarCircularIndetermininate"
            android:layout_width="@dimen/progressbar_width"
            android:layout_height="@dimen/progressbar_heigh"
            android:layout_gravity="center"
            android:background="@color/app_color"
            android:visibility="gone" />
        
        <TextView 
            android:id="@+id/empty_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/bigger"
            android:text="暂无数据，轻触屏幕可刷新"
            android:visibility="gone"
            />
    </FrameLayout>

</LinearLayout>